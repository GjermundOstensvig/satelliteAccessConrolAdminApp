<Page
    x:Class="SatelliteAccessControlAdmin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SatelliteAccessControlAdmin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Pivot Title="Admin">
            <PivotItem Padding="10" Header="Add">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid BorderBrush="Black" BorderThickness="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10"
                            FontSize="22"
                            Text="Add Person" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10"
                            Text="First Name: "
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10"
                            Text="Last Name: "
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10"
                            Text="E-mail: "
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="10"
                            Text="Phone Number: "
                            TextWrapping="Wrap" />
                        <TextBox x:ConnectionId='23'
                            Name="FNameTB"
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="300"
                            Margin="10"
                            HorizontalAlignment="Left" />
                        <TextBox x:ConnectionId='24'
                            Name="LNameTB"
                            Grid.Row="2"
                            Grid.Column="1"
                            Width="300"
                            Margin="10"
                            HorizontalAlignment="Left" />
                        <TextBox x:ConnectionId='25'
                            Name="EMailTB"
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="300"
                            Margin="10"
                            HorizontalAlignment="Left" />
                        <TextBox x:ConnectionId='26'
                            Name="PhoneNumTB"
                            Grid.Row="4"
                            Grid.Column="1"
                            Width="300"
                            Margin="10"
                            HorizontalAlignment="Left" />
                        <Button x:ConnectionId='27'
                            Grid.Row="5"
                            Grid.Column="0"
                            Width="80"
                            Margin="10"
                            HorizontalAlignment="Center"
                                                
                            Content="Add" />
                        <TextBlock x:ConnectionId='28'
                            Name="AddPersonFeedbackTB"
                            Grid.Row="5"
                            Grid.Column="1"
                            Width="Auto"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="Test" />
                    </Grid>
                </Grid>
            </PivotItem>
            <PivotItem Padding="10" Header="Give Access">
                <Grid
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="10"
                        FontSize="22"
                        Text="Give Access" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="10"
                        Text="Find person" />
                    <ListView x:ConnectionId='9'
                        Name="AuthorizeListView"
                        Grid.Row="2"
                        Width="Auto"
                        MinWidth="400"
                        MinHeight="400"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Background="#FFAAAAAA">
                        <ListView.ItemTemplate>
                            <DataTemplate                          >
                                <StackPanel x:ConnectionId='19' Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='20' Margin="5,0"                          />
                                    <TextBlock x:ConnectionId='21' Margin="5,0"                           />
                                    <TextBlock x:ConnectionId='22' Margin="5,0"                          />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10"
                        Text="Give access to room:" />
                    <ListView x:ConnectionId='10'
                        Name="AuthorizeForRoomListView"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="Auto"
                        MinWidth="400"
                        MinHeight="400"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Background="#FFAAAAAA">
                        <ListView.ItemTemplate>
                            <DataTemplate                        >
                                <StackPanel x:ConnectionId='16' Orientation="Horizontal">
                                    <TextBlock Margin="5,0" Text="Room number: " />
                                    <TextBlock x:ConnectionId='17' Margin="5,0"                            />
                                    <TextBlock Margin="5,0" Text="Floor: " />
                                    <TextBlock x:ConnectionId='18' Margin="5,0"                       />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <Button x:ConnectionId='15'
                            Name="UpdateAuthPersonListBtn"
                            Margin="10"
                                                                 
                            Content="Update list" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Button x:ConnectionId='14'
                            Name="UpdateAuthRoomListBtn"
                            Grid.Row="3"
                            Margin="10"
                                                               
                            Content="Update list" />

                    </StackPanel>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10"
                        Text="Person is authorized in the selected room untill:" />
                    <StackPanel Grid.Row="2" Grid.Column="2">
                        <DatePicker x:ConnectionId='11'
                            Name="GiveAccessDatePicker"
                            Margin="10"
                            VerticalAlignment="Top" />
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='12'
                                Name="GiveAccessBtn"
                                Margin="10"
                                                           
                                Content="Give Access" />
                            <TextBlock x:ConnectionId='13' Name="GiveAccessFeedbackTB" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </PivotItem>
            <PivotItem Padding="10" Header="Edit">
                <Grid />
            </PivotItem>
            <PivotItem Padding="10" Header="Delete">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView x:ConnectionId='1'
                        Name="DeleteListView"
                        Grid.Row="0"
                        Width="Auto"
                        MinWidth="400"
                        MinHeight="400"
                        Margin="10"
                        HorizontalAlignment="Left"
                        Background="#FFAAAAAA">
                        <ListView.ItemTemplate>
                            <DataTemplate                          >
                                <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='6' Margin="5,0"                          />
                                    <TextBlock x:ConnectionId='7' Margin="5,0"                           />
                                    <TextBlock x:ConnectionId='8' Margin="5,0"                          />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <RelativePanel Grid.Row="1">
                        <Button x:ConnectionId='2'
                            Name="UpdatePersonListBtn"
                            Margin="10"
                                                             
                            Content="Update List" />
                        <Button x:ConnectionId='3'
                            Name="DeleteBtn"
                            Margin="10"
                                                  
                            Content="Delete person"
                            RelativePanel.RightOf="UpdatePersonListBtn" />
                        <TextBlock x:ConnectionId='4'
                            Name="DeletePersonFeedbackTB"
                            RelativePanel.AlignVerticalCenterWith="DeleteBtn"
                            RelativePanel.RightOf="DeleteBtn" />
                    </RelativePanel>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

